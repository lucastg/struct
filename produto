#include <stdio.h>
#include <string>
#include <iostream>

using namespace std;
struct produto{
	int codigo;
	char nome[30];
	int peso;
	int valor;
	int dataFab;
	int lote;
	int dataVal;	
};

struct produto prod[5];
int i=0;


void incluir(){
	
	
	cout<<"Digite o nome do produto: ";
	cin>>prod[i].nome;
	
	cout<<"Digite o codigo do produto: ";
	cin>>prod[i].codigo;
	
	cout<<"Digite o peso do produto: ";
	cin>>prod[i].peso;
	
	cout<<"Digite o valor do produto: ";
	cin>>prod[i].valor;
	
	cout<<"Digite a data de fabricação do produto: ";
	cin>>prod[i].dataFab;
	
	cout<<"Digite o lote do produto: ";
	cin>>prod[i].lote;
	
	cout<<"Digite data de validade do produto: ";
	cin>>prod[i].dataVal;	
	i++;
	
}

void alterar(){
	
	int cont=0, cod;
	cout<<"Digite o codigo do produto a ser alterado: ";
	cin>>cod;
	
	while(cont<5){
		if(prod[cont].codigo=cod){
			
			cout<<"Nome do produto: "<<prod[cont].nome;
			cout<<endl;
			cout<<"Novo nome do produto: ";
			cin>>prod[cont].nome;
			cout<<endl;
			
			cout<<"Peso do produto: "<<prod[cont].peso;
			cout<<endl;
			cout<<"Novo peso do produto: ";
			cin>>prod[cont].peso;
			cout<<endl;
			
			cout<<"Valor do produto: "<<prod[cont].valor;
			cout<<endl;
			cout<<"Novo valor do produto: ";
			cin>>prod[cont].valor;
			cout<<endl;
			
			cout<<"Data de fabricação do produto: "<<prod[cont].dataFab;
			cout<<endl;
			cout<<"Nova data de fabricação do produto: ";
			cin>>prod[cont].dataFab;
			cout<<endl;
			
			cout<<"Lote do produto: "<<prod[cont].lote;
			cout<<endl;
			cout<<"Novo lote do produto: ";
			cin>>prod[cont].lote;
			cout<<endl;
			
			cout<<"Data de validade do produto: "<<prod[cont].dataVal;
			cout<<endl;
			cout<<"Nova data de validade do produto: "<<prod[cont].dataVal;
			cin>>prod[cont].dataVal;
			cout<<endl;
		}
		cont++;
	}
}

void consultar(){
	int cont=0, cod;
	cout<<"Digite o codigo do produto a ser pesquisado: ";
	cin>>cod;
	
	while(cont<5){
		if(prod[cont].codigo=cod){
			
			cout<<"Nome do produto: "<<prod[cont].nome;
			cout<<endl;
			cout<<"Peso do produto: "<<prod[cont].peso;
			cout<<endl;
			cout<<"Valor do produto: "<<prod[cont].valor;
			cout<<endl;
			cout<<"Data de fabricação do produto: "<<prod[cont].dataFab;
			cout<<endl;
			cout<<"Lote do produto: "<<prod[cont].lote;
			cout<<endl;
			cout<<"Data de validade do produto: "<<prod[cont].dataVal;
			cout<<endl;
			break;
		}
		cont++;
	}	
}

int main(){
	char opcao;
	char continuar='s';
	
	while(continuar=='s'){
		cout<< "==========================MENU==========================";
		cout<<endl;
		cout<<"1-INCLUIR";
		cout<<endl;
		cout<<endl;
		cout<<"2-ALTERAR";
		cout<<endl;
		cout<<endl;
		cout<<"3-CONSULTAR";
		cout<<endl;
		cout<<endl;
		cout<<"4-REGISTROS DA ESTRUTURA";
		cout<<endl;
		cout<<endl;
		cout<<"5-SAIR";
		cout<<endl;
		cout<<endl;
		cin>>opcao;
		
		switch (opcao){
			case '1':{
				incluir();
				break;
			}
			case '2':{
				alterar();
				break;
			}
			case '3':{
				consultar();
				break;
			}
			case '5':{
				continuar='n';
				break;
			}
			default:
				cout<<"Opcao Invalida!";
				cout<<endl;
				cout<<endl;
				break;		
		}	
	}
	
}
